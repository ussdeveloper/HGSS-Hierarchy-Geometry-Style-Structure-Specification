{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "hgss.schema.json",
  "type": "object",
  "required": [
    "type",
    "version",
    "root",
    "styles"
  ],
  "properties": {
    "type": {
      "const": "HGSS"
    },
    "version": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "styles": {
      "type": "object",
      "description": "Keyed by '{Type}' or '#id', values are style property maps",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": [
            "string",
            "number",
            "boolean",
            "array",
            "object",
            "null"
          ]
        }
      }
    },
    "root": {
      "$ref": "#/$defs/node"
    }
  },
  "$defs": {
    "geometry": {
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "coordinates": {
          "type": [
            "array",
            "object"
          ]
        }
      },
      "additionalProperties": true
    },
    "node": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 3
        },
        "style": {
          "type": "object"
        },
        "geometry": {
          "$ref": "#/$defs/geometry"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/node"
          }
        }
      },
      "oneOf": [
        {
          "required": [
            "geometry"
          ]
        },
        {
          "required": [
            "children"
          ]
        }
      ],
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}